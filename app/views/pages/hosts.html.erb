<ul class="bullets">
  <h2>All the hosts:</h2>
</ul>

<table>
 <tbody>
  <% @users.each do |user| %>
  <% if user.role == "host" %>
  <tr>
    <td>
      <div class="ribbon-box">
        <div class="ribbon-wrapper">
          <div class="ribbon"><%= user.role %></div>
        </div>
        <%= image_tag user.users_gravatar.detail.url %>
      </div>
    </td>
    <td><%= link_to user.name, user %>
      <br>
      <%= user.try(:bio).truncate_words(10) %></td>
      <td><% if user.verified = "true" %></td>
      <td> verified </td>
      <td><% else %></td>
      <td> not verified </td>
      <td><% end %></td>
      <% if can? :edit, user %>
      <td><%= link_to('Edit Account', edit_user_path(user)) %> | <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>


