<ul class="bullets">
  <h2>All the bands:</h2>
</ul>

<table>
 <tbody>
  <% @users.each do |user| %>
  <% if user.role == "band" %>
    <tr>
      <td>
        <div class="ribbon-box">
          <div class="ribbon-wrapper">
            <div class="ribbon"><%= user.try(:role) %></div>
          </div>
          <%= image_tag user.try(:users_gravatar) %>
        </div>
      </td>
      <td>
        <%= link_to user.name, user %>
        <br>
        <%= user.try(:bio).truncate_words(10) %>
      </td>
        
          <td> verified </td>
        
      <% if can? :edit, user %>
        <td>
          <%= link_to('Edit Account', edit_user_path(user)) %> | <%= link_to 'Destroy', user,   method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tr>
    <% end %>
  <% end %>
</tbody>
</table>

<br>


