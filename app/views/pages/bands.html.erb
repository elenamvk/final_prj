<ul class="bullets">
  <h2>All the bands:</h2>
</ul>

<table>
 <tbody>
  <% @users.each do |user| %>
  <% if user.role == "band" %>
    <tr>
      <td>
        <div class="ribbon-box">
          <div class="ribbon-wrapper">
            <div class="ribbon"><%= user.try(:role) %></div>
          </div>
          <%= image_tag user.try(:users_gravatar) %>
        </div>
      </td>
      <td>
        <%= link_to user.name, user %>

    </tr>
    <% end %>
  <% end %>
</tbody>
</table>

<br>


