<%= form_for(@request) do |f| %>
<% if @request.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

  <ul>
    <% @request.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field" id="date_select">
  <%= f.label :start_date, "From...:" %>
  <%= f.date_select :start_date%>
</div>
<div class="field" id="date_select" >
  <%= f.label :end_date, "...To:" %>
  <%= f.date_select :end_date %>
</div>
<div class="field" id="date_select">
  <%= f.label :n_of_people, "For how many people?" %>
  <%= f.number_field :n_of_people %>
</div>
 <div class="field">
   Write your request here:
   <%= f.text_area :message, placeholder: "Be sure to specify the city you'll be in and any other additional information!"%>
 </div>
<div class="stats">
    <ul>
      <li> Yes, this request has been answred <%= f.radio_button :accepted, true %></li>
      <li> No, this request has not been answred<%= f.radio_button :accepted, false  %></li>
    </ul>
</div>
<br>
<div class="actions-center">
  <%= f.submit %>
</div>
<% end %>
<br>

